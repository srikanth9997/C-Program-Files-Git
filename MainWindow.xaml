<Window x:Class="LCPReportingSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:resrc="clr-namespace:LCPReportingSystem.Properties"
        xmlns:local="clr-namespace:LCPReportingSystem"
        xmlns:usercontrol="clr-namespace:LCPReportingSystem.UserControls" xmlns:materialdesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d" Icon="/Assarts/IconLCP.ico"  
        Title="RsLogin" Height="1000" Width="2000" WindowStartupLocation="CenterScreen" WindowStyle="None"  WindowState="Maximized" KeyDown="Window_KeyDown">

    <Window.Resources>
        <ResourceDictionary Source="/ResourceDictionarys/MainWindowStyle.xaml"/>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assarts/WelcomeScreen.jpg" Stretch="Fill" />
        </Grid.Background>
        <Button Width="30" Height="30"  Command="{Binding ExitCommand}" BorderBrush="Transparent" Background="Transparent"  VerticalAlignment="Top" HorizontalAlignment="Right">
            <materialdesign:PackIcon x:Name="BtnClose"  HorizontalAlignment="Right" Margin="0,0,0,0" Foreground="Red"  Background="Transparent" Height="25" Width="25"   Kind="close" />
        </Button>
      
       
        <!--#region Welcome TextBlock Start-->
        <StackPanel RenderTransformOrigin="0.5,0.5">
            <StackPanel.RenderTransform>
                <TransformGroup>
                    <TranslateTransform X="0" Y="22"/>
                </TransformGroup>
            </StackPanel.RenderTransform>
            <TextBlock Text="LCP Reporting System" Style="{StaticResource welcomeTextBlock}">
                <TextBlock.Effect>
                    <DropShadowEffect ShadowDepth="2"/>
                </TextBlock.Effect>
            </TextBlock>
        </StackPanel>
        <!--#endregion-->

        <StackPanel x:Name="SuperAdminPanel" Width="810" Height="450" Visibility="Collapsed">
            <Grid>
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                     
                        <GradientStop Color="#0064C1" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="1.1*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Height="450">
                    <Border CornerRadius="10 0 0 10" Margin="0,10,0,-10">
                        
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="2" />
                        </Border.Effect>

                        <StackPanel Margin="0,-60,0,0" Style="{StaticResource adminloginStockleftblock}">
                            <Border BorderBrush="White" BorderThickness="0,0,0,1" Width="150">
                                <TextBlock  Text="ADMIN" Padding="0,0,0,0" Style="{StaticResource adminHeadtext}"/>
                            </Border>
                            <TextBlock Text="You are logged in with Admin credentials. Please create at least one user to continue." Style="{StaticResource adminloginStickpanelText}">
                               
                            </TextBlock>
                            
                            <Image Height="100" Width="200" Margin="0,40,0,0" Style="{StaticResource imgLoginVerifySuper}"/>
                            
                        </StackPanel>
                    </Border>
                </Border>
                <Border Grid.Column="1" Background="White" CornerRadius="0 10 10 0">
                    
                      
                    <Border x:Name="CreateUserBorder" Visibility="Visible" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"   BorderThickness="1" CornerRadius="5" Padding="10">
                        <StackPanel Margin="0,-30,0,0">
                            <Border  HorizontalAlignment="Center" BorderBrush="Black" BorderThickness="0,0,0,2">
                                <!--<materialdesign:PackIcon Foreground="YellowGreen" Margin="0,12,0,0" Height="30" Width="30" Kind="AccountPlusOutline" />-->

                                <TextBlock Text ="Create User" FontSize="34"  Foreground="Black" Margin="7,18,0,0" Style="{StaticResource newUserRightHederText}"/>
                            </Border>

                            <StackPanel Margin="-10 12 0 0">
                                <StackPanel Width="358" Style="{StaticResource newUserInputFiels}">
                                    <Border Margin="0 10 0 10">
                                        <TextBlock Text="{x:Static resrc:Resources.String1}" Foreground="Black" FontSize="14" FontFamily="Arial Unicode MS Regular"/>
                                    </Border>
                                    <Border BorderThickness="1" BorderBrush="Black" CornerRadius="5.25" Padding="5 5" Background="White">
                                        <TextBox x:Name="txtNewUsernameSuper" Text=""  FontSize="14" FontFamily="Arial Unicode MS Regular" Foreground="Black" Background="Transparent">
                                            <TextBox.BorderThickness>
                                                <Thickness/>
                                            </TextBox.BorderThickness>
                                            <TextBox.ToolTip>
                                                <ToolTip Content="Enter a valid User Name "/>
                                            </TextBox.ToolTip>
                                        </TextBox>
                                    </Border>
                                </StackPanel>
                                <StackPanel Width="358" Style="{StaticResource newUserInputFiels}">
                                    <Border Margin="0 10 0 10">
                                        <TextBlock Text="{x:Static resrc:Resources.String10}" Foreground="Black" FontSize="14" FontFamily="Arial Unicode MS Regular"/>
                                    </Border>
                                    <Border BorderThickness="1" BorderBrush="Black" CornerRadius="5.25" Padding="5 5" Background="White">
                                        <TextBox x:Name="txtNewMail" Text="" FontSize="14" FontFamily="Arial Unicode MS Regular" Foreground="Black" Background="Transparent">
                                            <TextBox.BorderThickness>
                                                <Thickness/>
                                            </TextBox.BorderThickness>
                                            <TextBox.ToolTip>
                                                <ToolTip Content="Enter a valid Email Id "/>
                                            </TextBox.ToolTip>
                                        </TextBox>
                                    </Border>
                                </StackPanel>
                                <StackPanel Style="{StaticResource newUserInputFiels}">
                                    <Border Margin="0 10 0 10">
                                        <TextBlock Text="{x:Static resrc:Resources.String11}" Foreground="Black" FontSize="14" FontFamily="Arial Unicode MS Regular"/>
                                    </Border>
                                   
                                        <StackPanel Height="28" Orientation="Horizontal">
                                        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5">
                                            <StackPanel Width="358">
                                           
                                                <PasswordBox Height="28" BorderBrush="Transparent" x:Name="txtUserpasswordSuper" Padding="0,5,0,0" PasswordChanged="txtUserpasswordSuper_PasswordChanged"></PasswordBox>
                                                <TextBox Height="28" x:Name="PasswordVisibletextBoxSuper" FontSize="14" Padding="0,2,0,0" Visibility="Collapsed"></TextBox>
                                          
                                            </StackPanel>
                                        </Border>
                                        <materialdesign:PackIcon x:Name="eyeIconSuper" MouseLeftButtonDown="eyeIconSuper_MouseLeftButtonDown"  MouseLeftButtonUp="eyeIconSuper_MouseLeftButtonUp"  HorizontalAlignment="Right" Margin="0,2,0,0" Foreground="Black" Background="White" Height="25" Width="25"   Kind="EyeOff" />

                                        </StackPanel>
                                   
                                    
                                </StackPanel>
                                <StackPanel x:Name="PasswordRulesPanelSuper" Margin="20,10,0,0" Visibility="Collapsed" Width="380" Background="White">
                                    <TextBlock x:Name="RuleLengthS" FontSize="14" Text="• At least 6 characters" Foreground="Red" Opacity="0.7"/>
                                    <TextBlock x:Name="RuleLowerS" FontSize="14" Text="• At least one lowercase letter (a-z)" Foreground="Red" Opacity="0.7"/>
                                    <TextBlock x:Name="RuleUpperS" FontSize="14" Text="• At least one uppercase letter (A-Z)" Foreground="Red" Opacity="0.7"/>
                                    <TextBlock x:Name="RuleDigitS"  FontSize="14" Text="• At least one digit (0-9)" Foreground="Red" Opacity="0.7"/>
                                    <TextBlock x:Name="RuleSpecialS" FontSize="14" Text="• At least one special character (@$!%*?)" Foreground="Red" Opacity="0.7"/>
                                </StackPanel>
                                <StackPanel Margin="25 15 0 0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="110"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0">
                                            <StackPanel>
                                                <RadioButton x:Name="RadiobuttonAdmin" GroupName="UserType" Cursor="Hand" Checked="RadiobuttonAdmin_Checked" Unchecked="RadiobuttonAdmin_Unchecked"  BorderBrush="#3479C2">
                                                    <RadioButton.BorderThickness>
                                                        <Thickness Left="4" Right="4" Top="4" Bottom="4"/>
                                                    </RadioButton.BorderThickness>
                                                    <TextBlock Text="{x:Static resrc:Resources.String6}" Padding="0,3,0,0" Foreground="Black" FontSize="14" FontFamily="Arial Unicode MS Regular"  HorizontalAlignment="Center"/>
                                                    <RadioButton.ToolTip>
                                                        <ToolTip Content="Select Admin User option "/>
                                                    </RadioButton.ToolTip>
                                                </RadioButton>
                                            </StackPanel>
                                        </Border>
                                        <Border Grid.Column="1">
                                            <StackPanel>
                                                <RadioButton x:Name="RadiobuttonUser" GroupName="UserType" Cursor="Hand" Checked="RadiobuttonUser_Checked" Unchecked="RadiobuttonUser_Unchecked" BorderBrush="#3479C2">
                                                    <RadioButton.BorderThickness>
                                                        <Thickness Left="4" Right="4" Top="4" Bottom="4"/>
                                                    </RadioButton.BorderThickness>
                                                    <TextBlock Text="{x:Static resrc:Resources.String7}" Padding="0,3,0,0" Foreground="Black" FontSize="14" FontFamily="Arial Unicode MS Regular" HorizontalAlignment="Center"/>
                                                    <RadioButton.ToolTip>
                                                        <ToolTip Content="Select Normal User Creation option "/>
                                                    </RadioButton.ToolTip>
                                                </RadioButton>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="20 15 0 0">

                                <Button x:Name="btnNewUserCreate" Width="80" Height="30" Foreground="White" FontFamily="Arial" FontWeight="SemiBold"  Content="{x:Static resrc:Resources.String8}" Click="btnNewUserCreate_Click" >
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="bdr_main"  CornerRadius="6">
                                                            <Border.Background>
                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                    <GradientStop Color="#0064C1" Offset="0"/>
                                                                  
                                                                    <GradientStop Color="#0064C1" Offset="1"/>
                                                                </LinearGradientBrush>
                                                            </Border.Background>

                                                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="bdr_main" Property="Background" Value="YellowGreen"/>
                                                            </Trigger>
                                                            <Trigger Property="IsPressed" Value="True">
                                                                <Setter TargetName="bdr_main" Property="Background" Value="#28A745"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>

                                </Button>

                            </StackPanel>
                        </StackPanel>
                    </Border>

                </Border>
            </Grid>
        </StackPanel>

        <!--#region Login Screen Start-->
        <StackPanel Width="810" Height="450" Visibility="{Binding Path=adminfields.IsLoginView,Converter={StaticResource ConvertBoleanVisibility}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="1.1*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Height="450">
                    <Border CornerRadius="10 0 0 10">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#0064C1" Offset="0"/>
                                <GradientStop Color="#0064C1" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="2" />
                        </Border.Effect>

                        <StackPanel Style="{StaticResource adminloginStockleftblock}">
                            <TextBlock Style="{StaticResource adminHeadtext}"/>
                            <TextBlock Style="{StaticResource adminloginStickpanelText}"/>
                            <Border Style="{StaticResource loginVerifyLogo}">
                                <Image Style="{StaticResource imgLoginVerify}"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </Border>
                <Border Grid.Column="1" CornerRadius="0 10 10 0">
                    <Border.Background>
                        <SolidColorBrush Color="#EEEFF3"/>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2"/>
                    </Border.Effect>
                    <StackPanel>
                        <Button HorizontalAlignment="Right" Visibility="Collapsed" Cursor="Hand" Command="{Binding ExitCommand}">
                            <Border Height="24" Width="56"  CornerRadius="0 10 0 10" Background="#0064C1">
                                <TextBlock Text="EXIT" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="Red" FontFamily="Arial Unicode MS Bold">
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="#420000" ShadowDepth="1"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                            </Border>
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border x:Name="bdr_newUser">
                                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bdr_newUser" Property="Background" Value="Transparent"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="bdr_newUser" Property="Background" Value="Transparent"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Border BorderThickness="3" BorderBrush="#074442" Margin="0 12 0 0" Height="90" Width="90" CornerRadius="45">
                            <Image Source="/Assarts/login.png" Height="60" Width="60" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel x:Name="UserTextPanel" Visibility="Visible" Margin="60 0 60 0">
                            <Border Margin="0 10 0 10">
                                <TextBlock Text="User Name" Foreground="Black" FontSize="14" FontFamily="Arial Unicode MS Regular"/>
                            </Border>
                            <Border BorderThickness="1" BorderBrush="Black" CornerRadius="5.25" Padding="5 5">
                                <Border.Background>
                                    <SolidColorBrush Color="White"/>
                                </Border.Background>
                                <TextBox x:Name="txtUserName"  Text="" FontSize="14" FontFamily="Arial Unicode MS Regular" Foreground="Black">
                                    <TextBox.BorderThickness>
                                        <Thickness/>
                                    </TextBox.BorderThickness>
                                    <TextBox.Background>
                                        <SolidColorBrush Color="Transparent"/>
                                    </TextBox.Background>
                                    <TextBox.ToolTip>
                                        <ToolTip Content="Enter a valid User Name "/>
                                    </TextBox.ToolTip>
                                </TextBox>
                            </Border>
                            <Border Margin="0 10 0 10">
                                <TextBlock x:Name="txtUserPassword" Text="{x:Static resrc:Resources.String12}" Foreground="Black" FontSize="14" FontFamily="Arial Unicode MS Regular">
                                    
                                </TextBlock>
                            </Border>
                            <Border BorderThickness="1" Height="30"  BorderBrush="Black" CornerRadius="5.25" >
                                <Border.Background>
                                    <SolidColorBrush Color="White"/>
                                </Border.Background>

                                <!--<ContentControl>
                                    <usercontrol:PasswordUserControl x:Name="txtUserpassword" Height="18" UserPassword=""/>
                                </ContentControl>-->
                               
                                    <StackPanel Height="28" Orientation="Horizontal">
                                        <StackPanel Width="265">
                                            <PasswordBox Height="28" BorderBrush="Transparent" x:Name="txtUserpassword" Padding="0,5,0,0" PasswordChanged="txtUserpassword_PasswordChanged"></PasswordBox>
                                            <TextBox Height="28" x:Name="PasswordVisibletextBox" FontSize="14" Padding="0,2,0,0" Visibility="Collapsed"></TextBox>
                                        </StackPanel>
                                        <materialdesign:PackIcon x:Name="eyeIcon" MouseLeftButtonDown="ToggleVisibilityButton_MouseLeftButtonDown" MouseLeftButtonUp="ToggleVisibilityButton_MouseLeftButtonUp" HorizontalAlignment="Right" Margin="0,0,0,0" Foreground="Black" Background="White" Height="25" Width="25"   Kind="EyeOff" />
                                    
                                     </StackPanel>
                                    
                            
                               
                            </Border>
                            <StackPanel x:Name="PasswordRulesPanel" Margin="0,10,0,0" Visibility="Collapsed" Background="Transparent">
                                <TextBlock x:Name="RuleLength" FontSize="14" Text="• At least 6 characters" Foreground="Red" Opacity="0.7"/>
                                <TextBlock x:Name="RuleLower" FontSize="14" Text="• At least one lowercase letter (a-z)" Foreground="Red" Opacity="0.7"/>
                                <TextBlock x:Name="RuleUpper" FontSize="14" Text="• At least one uppercase letter (A-Z)" Foreground="Red" Opacity="0.7"/>
                                <TextBlock x:Name="RuleDigit"  FontSize="14" Text="• At least one digit (0-9)" Foreground="Red" Opacity="0.7"/>
                                <TextBlock x:Name="RuleSpecial" FontSize="14" Text="• At least one special character (@$!%*?)" Foreground="Red" Opacity="0.7"/>
                            </StackPanel>

                            <Border Style="{StaticResource conformPassBlock1}">
                                <TextBlock Text="Enter New Password" Foreground="Black" Visibility="Collapsed" FontSize="14" FontFamily="Arial Unicode MS Regular"/>
                            </Border>
                            <Border Visibility="Collapsed"  Style="{StaticResource conformPassBlock2}">
                                <Border.Background>
                                    <SolidColorBrush Color="White"/>
                                </Border.Background>
                               
                                <usercontrol:PasswordUserControl x:Name="passwordControl" UserPassword="{Binding Path=adminfields.ConfirmPassword, UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"/>
                              
                            </Border>
                        </StackPanel>
                        
                        <!--<materialdesign:PackIcon Foreground="Black" Height="30" Width="40" Margin="0,-30,20,0" HorizontalAlignment="Right" Kind="Eye" />-->
                        <!--<Button x:Name="ToggleVisibilityButton"
                 Margin="0,-30,28,0" Height="30" Width="30" HorizontalAlignment="Right"
                  VerticalAlignment="Center" Background="Transparent" BorderBrush="Transparent"
                 MouseLeftButtonDown="ToggleVisibilityButton_MouseLeftButtonDown" MouseLeftButtonUp="ToggleVisibilityButton_MouseLeftButtonUp">
                            <materialdesign:PackIcon x:Name="eyeIcon" Margin="0,-30,28,0" Foreground="Black" Height="25" Width="25"   Kind="EyeLock" />
                          
                        </Button>-->

                        <StackPanel x:Name="btnLoginPanel" Margin="60 18 60 0" Visibility="Visible" Orientation="Horizontal" >
                            <Button x:Name="buttonLogin" Style="{StaticResource btnLogin}" Click="buttonLogin_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="bdr_main">
                                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            <Border.Background>
                                                <SolidColorBrush Color="#0064C1"/>
                                            </Border.Background>
                                            <Border.BorderThickness>
                                                <Thickness/>
                                            </Border.BorderThickness>
                                            <Border.Effect>
                                                <DropShadowEffect ShadowDepth="0.5" Color="#000000"/>
                                            </Border.Effect>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bdr_main" Property="Background" Value="YellowGreen"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="bdr_main" Property="Background" Value="Green"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <StackPanel  x:Name="CheckBoxPanel" Margin="0,0,0,0">
                                <CheckBox x:Name="Exercise_checkbox" Height="20" Width="130" Margin="20,0,0,0" Foreground="Black" FontFamily="Arial Unicode MS Regular" Content="Create Exercise" FontSize="15" Padding="5,-1,0,0" Checked="Exercise_checkbox_Checked" ></CheckBox>
                                <CheckBox x:Name="RememberMe_checkbox" Height="20" Width="130" Margin="20,0,0,0" Foreground="Black" FontFamily="Arial Unicode MS Regular" Content="Remember Me" FontSize="15" Padding="5,-1,0,0"></CheckBox>
                            </StackPanel>
                           

                            <Button Content="Create User" Style="{StaticResource btnNewuser}" Visibility="Hidden">
                                <Button.Template>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="bdr_newUser">
                                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            <Border.Background>
                                                <SolidColorBrush Color="#0064C1"/>
                                            </Border.Background>
                                            <Border.BorderThickness>
                                                <Thickness/>
                                            </Border.BorderThickness>
                                            <Border.Effect>
                                                <DropShadowEffect ShadowDepth="0.5" Color="#000000"/>
                                            </Border.Effect>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bdr_newUser" Property="Background" Value="YellowGreen"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="bdr_newUser" Property="Background" Value="Green"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button Margin="-120,0,0,0" Style="{StaticResource btnRestPassword}"   Command="{Binding ResetPasswordCommand}">
                                <Button.Template>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="bdr_newUser">
                                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            <Border.Background>
                                                <SolidColorBrush Color="#FF116FA4"/>
                                            </Border.Background>
                                            <Border.BorderThickness>
                                                <Thickness/>
                                            </Border.BorderThickness>
                                            <Border.Effect>
                                                <DropShadowEffect ShadowDepth="0.5" Color="#000000"/>
                                            </Border.Effect>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bdr_newUser" Property="Background" Value="YellowGreen"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="bdr_newUser" Property="Background" Value="Green"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                        <TextBlock x:Name="txtResetSuccess" Visibility="Collapsed" Text="Rest Password successfully Copleted !" HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="Green" FontSize="20">
                            
                        </TextBlock>
                        <TextBlock  x:Name="txtResetFailed" Visibility="Collapsed" Text=" Failed Rest Password " HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="Red" FontSize="20">

                        </TextBlock>
                        <StackPanel Margin="60 5 60 0" Orientation="Horizontal">
                            
                            <Button x:Name="BtnForgetPassword" Visibility="Collapsed" Style="{StaticResource btnForgetPassword}" Padding="0,5,0,0" FontSize="16" BorderBrush="#0064c1" BorderThickness="0,0,0,1" Foreground="#0064c1" FontFamily="Arial Unicode MS Regular" Content="Forget Password" Command="{Binding ForgetPasswordCommand}">
                                <!--<TextBlock Text="Forget Password" Foreground="#0064c1" FontFamily="Arial Unicode MS Regular"
                                           FontSize="16" Cursor="Hand" TextDecorations="Underline"/>-->

                            </Button>
                            <Button Style="{StaticResource btnForghetPassword}" Margin="20 0 0 0" Command="{Binding SelectDeviceCommand}"
                                    Visibility="Collapsed">
                                <TextBlock Text="{x:Static resrc:Resources.String14}" Foreground="#0064c1" FontFamily="Arial Unicode MS Regular" FontSize="16" Cursor="Hand" TextDecorations="Underline"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
        <!--#endregion-->

        <!--#region NewUser Screen Start--><!--
        <StackPanel Style="{StaticResource stackNewuser}" >
            <StackPanel.Effect>
                <DropShadowEffect ShadowDepth="2" Color="#12243C"/>
            </StackPanel.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="1.3*"/>
                </Grid.ColumnDefinitions>

                <Border  Grid.Column="1" Background="#EEEFF3
">
                    <StackPanel>
                        <TextBlock Text ="{x:Static resrc:Resources.String3}" Style="{StaticResource newUserRightHederText}"/>
                        <StackPanel Margin="0 12 0 0">
                            <StackPanel Style="{StaticResource newUserInputFiels}">
                                <Border Margin="0 10 0 10">
                                    <TextBlock Text="{x:Static resrc:Resources.String1}" Foreground="Black" FontSize="14" FontFamily="Arial Unicode MS Regular"/>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="Black" CornerRadius="5.25" Padding="5 5" Background="White">
                                    <TextBox Text="{Binding Path=adminfields.NuserName}" FontSize="14" FontFamily="Arial Unicode MS Regular" Foreground="Black" Background="Transparent">
                                        <TextBox.BorderThickness>
                                            <Thickness/>
                                        </TextBox.BorderThickness>
                                        <TextBox.ToolTip>
                                            <ToolTip Content="Enter a valid User Name "/>
                                        </TextBox.ToolTip>
                                    </TextBox>                                    
                                </Border>
                            </StackPanel>
                            <StackPanel Style="{StaticResource newUserInputFiels}">
                                <Border Margin="0 10 0 10">
                                    <TextBlock Text="{x:Static resrc:Resources.String10}" Foreground="Black" FontSize="14" FontFamily="Arial Unicode MS Regular"/>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="Black" CornerRadius="5.25" Padding="5 5" Background="White">
                                    <TextBox Text="{Binding Path=adminfields.Email}" FontSize="14" FontFamily="Arial Unicode MS Regular" Foreground="Black" Background="Transparent">
                                        <TextBox.BorderThickness>
                                            <Thickness/>
                                        </TextBox.BorderThickness>
                                        <TextBox.ToolTip>
                                            <ToolTip Content="Enter a valid Email Id "/>
                                        </TextBox.ToolTip>
                                    </TextBox>
                                </Border>
                            </StackPanel>
                            <StackPanel Style="{StaticResource newUserInputFiels}">
                                <Border Margin="0 10 0 10">
                                    <TextBlock Text="{x:Static resrc:Resources.String11}" Foreground="Black" FontSize="14" FontFamily="Arial Unicode MS Regular"/>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="Black" CornerRadius="5.25" Padding="5 5" Background="White">
                                    <ContentControl>
                                        <usercontrol:PasswordUserControl UserPassword="{Binding Path=adminfields.Npassword, UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"/>
                                    </ContentControl>
                                </Border>
                            </StackPanel>
                            <StackPanel Style="{StaticResource newUserInputFiels}">
                                <Border Margin="0 10 0 10">
                                    <TextBlock Text="{x:Static resrc:Resources.String2}" Foreground="Black" FontSize="14" FontFamily="Arial Unicode MS Regular"/>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="Black" CornerRadius="5.25" Padding="5 5" Background="White">
                                    <ContentControl>
                                        <usercontrol:PasswordUserControl UserPassword="{Binding Path=adminfields.NConformPassword, UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"/>
                                    </ContentControl>
                                </Border>
                            </StackPanel>
                            <StackPanel Margin="25 15 0 0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0">
                                        <StackPanel>
                                            <RadioButton GroupName="UserType" Cursor="Hand" IsChecked="{Binding Path=adminfields.IsAdminRole}" BorderBrush="#3479C2">
                                                <RadioButton.BorderThickness>
                                                    <Thickness Left="4" Right="4" Top="4" Bottom="4"/>
                                                </RadioButton.BorderThickness>
                                                <TextBlock Text="{x:Static resrc:Resources.String6}" Foreground="Black" FontSize="14" FontFamily="Arial Unicode MS Regular" HorizontalAlignment="Center"/>
                                                <RadioButton.ToolTip>
                                                    <ToolTip Content="Select Admin User option "/>
                                                </RadioButton.ToolTip>
                                            </RadioButton>
                                        </StackPanel>
                                    </Border>
                                    <Border Grid.Column="1">
                                        <StackPanel>
                                            <RadioButton GroupName="UserType" Cursor="Hand" IsChecked="{Binding Path=adminfields.IsUserRole}" BorderBrush="#3479C2">
                                                <RadioButton.BorderThickness>
                                                    <Thickness Left="4" Right="4" Top="4" Bottom="4"/>
                                                </RadioButton.BorderThickness>
                                                <TextBlock Text="{x:Static resrc:Resources.String7}" Foreground="Black" FontSize="14" FontFamily="Arial Unicode MS Regular" HorizontalAlignment="Center"/>
                                                <RadioButton.ToolTip>
                                                    <ToolTip Content="Select Normal User Creation option "/>
                                                </RadioButton.ToolTip>
                                            </RadioButton>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="25 15 0 0">
                            <Button Style="{StaticResource btnCreate}" Content="{x:Static resrc:Resources.String8}" Command="{Binding AddUserCommand}">
                                <Button.Template>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="bdr_main" Background="#28A745">
                                            <Border.BorderThickness>
                                                <Thickness/>
                                            </Border.BorderThickness>
                                            <Border.Effect>
                                                <DropShadowEffect ShadowDepth="0.5" Color="#000000"/>
                                            </Border.Effect>
                                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bdr_main" Property="Background" Value="#0A8945"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="bdr_main" Property="Background" Value="#450433"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>

                            </Button>

                            <Button  Content="CANCEL" Style="{StaticResource btnNewUser}" Command="{Binding CancelCommand}">
                                <Button.Template>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="bdr_newUser" Background="#CD6155">
                                            <Border.BorderThickness>
                                                <Thickness/>
                                            </Border.BorderThickness>
                                            <Border.Effect>
                                                <DropShadowEffect ShadowDepth="0.5" Color="#000000"/>
                                            </Border.Effect>
                                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bdr_newUser" Property="Background" Value="#7E504B"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="bdr_newUser" Property="Background" Value="#450433"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Grid.Column="0" Height="450">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#FF116FA4" Offset="0"/>
                            <GradientStop Color="#FF116FA4" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <StackPanel Style="{StaticResource newUserLeftAnnouncement}">
                        <StackPanel>
                            <TextBlock Text="{x:Static resrc:Resources.String4}" Style="{StaticResource newUserLeftHederTxt}">
                                <TextBlock.Effect>
                                    <DropShadowEffect ShadowDepth="2"/>
                                </TextBlock.Effect>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Margin="0 32 0 0">
                            <TextBlock Text="{x:Static resrc:Resources.String5}" Style="{StaticResource newUserAnnouncementContain}"/>
                        </StackPanel>
                        <StackPanel Margin="0 32 0 0">
                            <Border Style="{StaticResource newUserLogoBorder}" BorderBrush="#3387D3">
                                <Image Style="{StaticResource newUserImgLogoLeft}"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
        --><!--#endregion-->

        <!--#region Device Interface Popup-->
        <Popup IsOpen="{Binding Path=adminfields.IsDevicePopupEnable}" Placement="Center" PopupAnimation="Fade" Width="450" Height="250" AllowsTransparency="True">
            <Border CornerRadius="6" Width="400" Height="200" Background="#0064C1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Opacity="0.8"  Color="#0064C1" ShadowDepth="10" />
                </Border.Effect>
                <StackPanel Margin="10 10 10 10">
                    <Grid Height="179">
                        <ListView Margin="10 15 0 0" Style="{StaticResource FindDeviceListView}" ItemContainerStyle="{StaticResource FindDeviceItem}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <RadioButton IsChecked="{Binding Path=IsChecked,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                                 Content="{Binding DeviceDescription}" GroupName="CheckDevice" FontFamily="Arial Unicode MS" FontSize="16" Foreground="White" MouseDoubleClick="RadioButton_MouseDoubleClick">
                                        <RadioButton.BorderThickness>
                                            <Thickness Left="4" Right="4" Top="4" Bottom="4"/>
                                        </RadioButton.BorderThickness>
                                    </RadioButton>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Right" Orientation="Horizontal">
                            <Button Command="{Binding SubmitPopupCommand}" Style="{StaticResource BtnSubmitPopup}"/>
                            <Button Command="{Binding ClosePopupCommand}" Style="{StaticResource BtnClosePopup}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </Popup>



        <Popup x:Name="ExerciseWindowPopup" Visibility="Collapsed"  Placement="Center" PopupAnimation="Fade"  AllowsTransparency="True">
            <Border  CornerRadius="1" Width="420" Height="300" Background="#0064C1" >
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Opacity="0.8"  Color="#0064C1" ShadowDepth="10" />
                </Border.Effect>
                <!--<Border.Background>
                    <ImageBrush ImageSource="/Assarts/Dashbord.jpg" Stretch="Fill" />
                </Border.Background>-->
                <GroupBox Header="Exercise Window" Width="415" Height="290" Foreground="White" FontWeight="SemiBold" BorderThickness="0.7">
                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,15,0,0">
                        <StackPanel Orientation="Vertical" >
                            <Label x:Name="ExerciseTypeLabel" Content="Exercise Type" Width="120" Height="30" HorizontalAlignment="Left" Foreground="White" FontWeight="SemiBold"  FontFamily="Arial"></Label>
                            <TextBox  x:Name="ExerciseType" Foreground="black" TextChanged="ExerciseType_TextChanged" Background="#EEEFF3" BorderBrush="White" HorizontalAlignment="Left" BorderThickness="1" Margin="10,0,0,0" Width="350" Height="30" FontWeight="SemiBold">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5"></Setter>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                            <Label x:Name="ExerciseDescriptionLabel" HorizontalAlignment="Left" Content="Exercise Description " VerticalAlignment="Top" Width="180" Height="30" FontFamily="Arial" Foreground="White" FontWeight="SemiBold"></Label>
                            <TextBox  x:Name="ExerciseDescriptionTextbox"  Background="#EEEFF3"  Margin="10,0,0,0" BorderBrush="White"  BorderThickness="1"  HorizontalAlignment="Left" Width="350" Height="100" Foreground="Black" FontWeight="SemiBold">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5"></Setter>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="10,10,0,0" HorizontalAlignment="Right">
                            <Button x:Name="Save_Exercise" Style="{StaticResource btnExerciseWindow}"  Click="Save_Exercise_Click" Content="Save">
                                <Button.Template>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="bdr_main">
                                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            <Border.Background>
                                                <SolidColorBrush Color="#0064C1"/>
                                            </Border.Background>
                                            <Border.BorderThickness>
                                                <Thickness/>
                                            </Border.BorderThickness>
                                            <Border.Effect>
                                                <DropShadowEffect ShadowDepth="0.5" Color="White"/>
                                            </Border.Effect>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bdr_main" Property="Background" Value="YellowGreen"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="bdr_main" Property="Background" Value="Green"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button x:Name="Skip_Exercise" Style="{StaticResource btnExerciseWindow}" Click="Skip_Exercise_Click" Margin="10,0,0,0" Content="Skip">
                                <Button.Template>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="bdr_main">
                                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            <Border.Background>
                                                <SolidColorBrush Color="#0064C1"/>
                                            </Border.Background>
                                            <Border.BorderThickness>
                                                <Thickness/>
                                            </Border.BorderThickness>
                                            <Border.Effect>
                                                <DropShadowEffect ShadowDepth="0.5" Color="White"/>
                                            </Border.Effect>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bdr_main" Property="Background" Value="YellowGreen"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="bdr_main" Property="Background" Value="Green"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </StackPanel>

                </GroupBox>
            </Border>
        </Popup>
        <!--#endregion-->

    </Grid>
</Window>
